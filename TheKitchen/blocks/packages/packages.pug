.packages#packages
  .container
      .packages_title
        h3.color-text Пакеты 
      .packages__items-wrap.glide
        .package-decor__img
        .glide__track(data-glide-el="track")
            .glide__slides
                .packages__item.glide__slide
                    .packages__item-heading
                      .packages__item-title.color-text Доставка
                      .packages__item-subtitle от 100 человек
                    .packages__item-lists
                      .packages__item-list1
                        .packages__item_list-title  Меню
                        ul
                           li Завтрак
                           li Обед 
                           li Ужин 
                      .packages__item-list2
                        .packages__item_list-title Услуги
                        ul                          
                          li Доставка питания
                      .packages__item-list3
                        .packages__item_list-title Посуда
                        ul   
                             li Одноразовая посуда
                    .packages__item-button.btn-overlay
                       include ../button-calculate/button-calculate 
                           span Рассчитать     
